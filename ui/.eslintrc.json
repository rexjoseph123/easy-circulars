{
  "parser": "@typescript-eslint/parser",
  "extends": ["airbnb-base"],
  "plugins": ["@typescript-eslint"],
  "rules": {
    "import/extensions": "off",
    "no-undef": "off",
    "quotes": ["error", "double"],
    "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-underscore-dangle": ["error", { "allow": ["_id"] }]
  },
  "settings": {
    "import/resolver": {
      "typescript": {},
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    }
  },
  "env": {
    "jest": true
  }
}